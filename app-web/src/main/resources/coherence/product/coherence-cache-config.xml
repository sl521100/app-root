<?xml version="1.0"?>

<!DOCTYPE cache-config SYSTEM "cache-config.dtd">

<cache-config>
	
	<caching-scheme-mapping>
		<cache-mapping>
			<cache-name>InfoskyCoreCache</cache-name>
			<scheme-name>default-scheme</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>InfoskySSOCache</cache-name>
			<scheme-name>default-scheme</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>InfoskyExtendCache</cache-name>
			<scheme-name>pof-scheme</scheme-name>
		</cache-mapping>
	</caching-scheme-mapping>

	<caching-schemes>
		<distributed-scheme>
			<scheme-name>pof-scheme</scheme-name>
			<service-name>pof-service</service-name>
 			<serializer>
				<class-name>com.tangosol.io.pof.ConfigurablePofContext</class-name>
				<init-params>
					<init-param>
						<param-type>String</param-type>
						<param-value>infosky-pof-config.xml</param-value>
					</init-param>
				</init-params>
			</serializer>	
			<backing-map-scheme>
				<local-scheme>
					<scheme-ref>default-scheme-mapping</scheme-ref>
				</local-scheme>
			</backing-map-scheme>
			<backup-count>0</backup-count>
			<autostart>true</autostart>
			<request-timeout>3s</request-timeout>
		</distributed-scheme>
		
		<!-- 默认使用的scheme -->
		<distributed-scheme>
			<scheme-name>default-scheme</scheme-name>
			<service-name>default-service</service-name>
			<backing-map-scheme>
				<local-scheme>
					<scheme-ref>default-scheme-mapping</scheme-ref>
				</local-scheme>
			</backing-map-scheme>
			<backup-count>0</backup-count>
			<autostart>true</autostart>
			<request-timeout>3s</request-timeout>
		</distributed-scheme>
		<local-scheme>
			<scheme-name>default-scheme-mapping</scheme-name>
			<eviction-policy>LRU</eviction-policy>
			<high-units>64000</high-units>
			<expiry-delay>4H</expiry-delay>
			<flush-delay>4H</flush-delay>
			<cachestore-scheme></cachestore-scheme>
			<request-timeout>3s</request-timeout>
		</local-scheme>
	</caching-schemes>
</cache-config>