<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="ftpConfig" class="ctas.web.dto.config.FtpConfig">
        <property name="serverIP" value="${ftp-host}"/>
        <property name="port" value="21"/>
        <property name="userName" value="tcs"/>
        <property name="password" value="tcs"/>
        <!--ftp服务器下载根目录-->
        <property name="remoteDir" value="/${ftp-root}/bill/"/>
        <!--<property name="remoteDir" value="/"/>-->
        <!--数据文件下载到本地保存根目录-->
        <property name="baseDir" value="${download-base-dir}"/>
    </bean>

</beans>